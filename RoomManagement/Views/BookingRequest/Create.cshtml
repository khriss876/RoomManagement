@model RoomManagement.Models.CreateBookingRequestViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomTypeId" class="control-label"></label>
               @Html.DropDownListFor(q=> q.RoomTypeId, new SelectList(Model.RoomType, "Value", "Text"),"Select Room Type", new { @class = "form-control"})
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>
            <div class=" row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CheckinDate" class="control-label"></label>
                        <input asp-for="CheckinDate" class="form-control datepicker" />
                        <span asp-validation-for="CheckinDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CheckOutDate" class="control-label"></label>
                        <input asp-for="CheckOutDate" class="form-control datepicker" />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>

                </div>
            </div>
           
            
            <div class="form-group">
                <input type="submit" value="Request Room" class="btn btn-primary btn-block" /> 
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-outline-primary " asp-action="Index">Back to List</a>
</div>

@section Scripts{ 

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
}
