@model RoomManagement.Models.CreateBookingViewModel

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
               Room Name
            </th>
            <th>
                Date Created
            </th>
            <th>
            Default Days
            </th>
            <th>
                Room Price
            </th>
            <th>
                Room Number
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RoomTypes) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.ActionLink("Allocate Room", "SetRoom", new { id = item.RoomTypeId }, new { @class = "btn btn-success" }) |
                @*<a class="btn btn-outline-success" asp-action="SetRoom" asp-route=" @item.RoomTypeId">
                 <i class="fa fa-pencil"> </i> Allocate Room
                </a>*@
            </td>

        </tr>
}
    </tbody>
</table>
